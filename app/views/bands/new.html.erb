<h2>Add a band!</h2>

<form class="" action="<%=bands_url%>" method="post">
  <input type="hidden" name="authenticity_token" value='<%= form_authenticity_token %>'/>
<br>
  <label>
    Name:
    <input type="text" name="band[name]" value="">
  </label>
  <br>
  <br>
  <input type="submit" name="" value="Create Band">
</form>

<br>
<% if flash[:errors] %>
  <% flash[:errors].each do |error| %>
    <%= error %>
  <% end %>
<% end %>
